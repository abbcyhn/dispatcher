@using Dispatcher.WebUI.Models.Group
@model GroupAddOrEditModel

@{
    ViewBag.Title = "Qruplar";

    ViewBag.BackUrlVisibility = true;
    ViewBag.BackUrl = Url.Action("Index", "Group");
}

@section Scripts{
    <script src="~/Content/Scripts/validations/groupvalidation.js"></script>
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content">
            <form id="groupForm" class="form-horizontal" action="@Model.PostUrl" method="post">
                <fieldset>
                    <!--Group Id-->
                    <input name="GroupModel.Id" value="@Model.Group.Id" hidden class="hide" />

                    <!--Group Name-->
                    <div class="control-group">
                        <label class="control-label">Qrupun adı</label>
                        <div class="controls">
                            <input class="input-xlarge focused" type="text" name="GroupModel.Name" value="@Model.Group.Name">
                        </div>
                    </div>

                    <!--Group Course-->
                    <div class="control-group">
                        <label class="control-label">Kursun nömrəsi</label>
                        <div class="controls">
                            <select id="teachers" data-rel="chosen" name="GroupModel.CourseId">
                                @foreach (var cm in Model.CourseModels)
                                {
                                    <option @cm.Selected value="@cm.Model.Id">@cm.Model.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Yadda Saxla</button>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
</div>