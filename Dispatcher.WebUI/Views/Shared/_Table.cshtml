@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Table -->
<div class="row-fluid">
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header" data-original-title>
                <h2><i class="halflings-icon white user"></i><span class="break"></span>@ViewBag.Title Cədvəli</h2>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>№</th>
                            @RenderSection("THead")
                            <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @RenderSection("TBody")
                    </tbody>
                </table>
                <div class="span12 center">
                    <div class="dataTables_paginate paging_bootstrap pagination">
                        <ul>
                            <li><a @*data-toggle="modal" data-target="#myModalNorm"*@ href="@ViewBag.AddUrl">+ Əlavə et</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

@Html.Partial("_DialogConfirm");